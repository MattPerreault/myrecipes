<%= render 'shared/page_title', title: "create a new recipe"%>
<% if @recipe.errors.any? %>
  <div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card border border-danger bg-danger">
          <div class="card-heading">
                <h2 class="card-title">
                    <%= pluralize(@recipe.errors.count, "error") %>
                    prohibited this <%= @recipe.class %> from being saved:
                </h2>
                <div class="card-body">
                    <ul>
                        <%= @recipe.errors.full_messages.each do |message|%>
                        <li><%= message %></li>
                        <% end %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
  </div>
<% end %>
<div class="row">
    <div class=" col-form-label col-md-12">
        <%= form_for(@recipe, :html => {class: "form-horizontal",  role: "form"}) do |f| %>
            <div class="form-group row">
                <div class="col-sm-2 col-form-label">
                    <%= f.label :name %>
                </div>
                <div class="col-sm-10">
                <%= f.text_field :name, class: "form-control", placeholder: "Name of Recipe", autofocus: true %>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-form-label col-sm-2">
                    <%= f.label :description %>
                </div>
                <div class="col-md-10">
                    <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Enter steps to create d"%>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-8 mx-auto">
                    <%= f.submit class: "btn btn-primary btn-lg btn-xlarge"%>
                </div>
            </div>
        <% end %>
        <div class="col-4 mx-auto colormatch">
            [<%= link_to "Cancel request and return to recipes listing", recipes_path%>]
        </div>
    </div>
</div>