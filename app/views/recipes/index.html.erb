<%= render 'shared/page_title', title: "showing all recipes"%>

<% @recipes.each do |recipe|%>
    <div class="row">
      <div class="col-md-2">
        <section class="chef_info mx-auto">
        <%= gravatar_for(recipe.chef, size:100)%>
        </section>
      </div>
      <div class="col-md-8 card card-body bg-light" style="margin: .5em;">
        <h4><%= link_to recipe.name, recipe_path(recipe) %></h4>
        <p><%= truncate(recipe.description, length: 150)%></p>
        <p>
          <span class="quiet"><small>Created<%= time_ago_in_words(recipe.created_at)%>ago</small></span>
        </p>
      </div>
    </div>
<% end %>